#include "sort.h"

/**
 * counting_sort - sorts an array in ascending order
 * @array: array to sort
 * @size: size of the array
 *
 */

void counting_sort(int *array, size_t size)
{
	int i, k = 0, idx = 0;
	size_t i;
	int countArr = (int *)malloc((k + 1) * sizeof(int));

	for (i = 0; i < size; i++)
	{
		if (array[i] > k)
		{
			k = array[i];
		}
	}

	for (i = 0; i <= k; i++)
		countArr[i] = 0;

	for (i = 0; i < size; i++)
		countArr[array[i]]++;
	print_array(countArr, k + 1);

	for (i = 0; i <= k; i++)
	{
		for (j = 0; j < countArr[i]; j++)
			array[idx++] = i;
	}
	free(countArr);
}
